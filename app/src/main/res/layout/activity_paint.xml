<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <!-- TOP TOOLBAR -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:gravity="center"
        android:weightSum="10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView android:id="@+id/btnBrush" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:padding="8dp" android:src="@drawable/ic_brush"/>

        <!-- NEW ZOOM IN BUTTON -->
        <ImageView android:id="@+id/btnZoomIn" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:padding="8dp" android:src="@drawable/ic_zoom_in"/>

        <!-- NEW ZOOM OUT BUTTON -->
        <ImageView android:id="@+id/btnZoomOut" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:padding="8dp" android:src="@drawable/ic_zoom_out"/>

        <ImageView android:id="@+id/btnUndo" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:padding="8dp" android:src="@drawable/ic_undo"/>
        <ImageView android:id="@+id/btnRedo" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:padding="8dp" android:src="@drawable/ic_redo"/>
        <ImageView android:id="@+id/btnClear" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:padding="8dp" android:src="@drawable/ic_clear"/>
        <ImageView android:id="@+id/btnEraser" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:padding="8dp" android:src="@drawable/ic_eraser"/>
        <ImageView android:id="@+id/btnSave" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:padding="8dp" android:src="@drawable/ic_save"/>
        <ImageView android:id="@+id/btnShare" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:padding="8dp" android:src="@drawable/ic_share"/>
    </LinearLayout>


    <!-- LEFT PANEL: COLORS + SHAPES + STICKERS -->
    <ScrollView
        android:id="@+id/leftPanel"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- COLORS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colors"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <GridLayout
                android:id="@+id/colorGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="5"
                android:alignmentMode="alignMargins"
                android:layout_marginBottom="16dp">

                <!-- 9 Colors -->
                <View android:layout_width="32dp" android:layout_height="32dp" android:background="#ff0000" android:layout_margin="4dp"/>
                <View android:layout_width="32dp" android:layout_height="32dp" android:background="#00ff00" android:layout_margin="4dp"/>
                <View android:layout_width="32dp" android:layout_height="32dp" android:background="#0000ff" android:layout_margin="4dp"/>
                <View android:layout_width="32dp" android:layout_height="32dp" android:background="#ffff00" android:layout_margin="4dp"/>
                <View android:layout_width="32dp" android:layout_height="32dp" android:background="#ff00ff" android:layout_margin="4dp"/>
                <View android:layout_width="32dp" android:layout_height="32dp" android:background="#00ffff" android:layout_margin="4dp"/>
                <View android:layout_width="32dp" android:layout_height="32dp" android:background="#8B0000" android:layout_margin="4dp"/>
                <View android:layout_width="32dp" android:layout_height="32dp" android:background="#FFA500" android:layout_margin="4dp"/>

            </GridLayout>

            <!-- SHAPES -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shapes"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <GridLayout
                android:id="@+id/shapesGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:layout_marginBottom="16dp">

                <!-- 6 Shapes, 2 per row -->
                <ImageView android:id="@+id/shapeCircle" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_circle"/>
                <ImageView android:id="@+id/shapeSquare" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_square"/>
                <ImageView android:id="@+id/shapeTriangle" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_triangle"/>
                <ImageView android:id="@+id/shapeStar" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_star"/>
                <ImageView android:id="@+id/shapeArrow" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_arrow"/>
                <ImageView android:id="@+id/shapeHexagon" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_hexagon"/>
            </GridLayout>

            <!-- STICKERS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stickers"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <GridLayout
                android:id="@+id/stickersGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="5"
                android:alignmentMode="alignMargins"
                android:layout_marginBottom="20dp">

                <!-- 9 Stickers, 2 per row -->
                <ImageView android:id="@+id/sticker1" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/sticker1"/>
                <ImageView android:id="@+id/sticker2" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/sticker2"/>
                <ImageView android:id="@+id/sticker3" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/sticker3"/>
                <ImageView android:id="@+id/sticker4" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/sticker4"/>
                <ImageView android:id="@+id/sticker5" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/sticker5"/>
                <ImageView android:id="@+id/sticker6" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/sticker6"/>
                <ImageView android:id="@+id/sticker7" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/sticker7"/>
                <ImageView android:id="@+id/sticker8" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/sticker8"/>

            </GridLayout>

        </LinearLayout>
    </ScrollView>

    <!-- MAIN CANVAS WITH FRAMELAYOUT FOR DYNAMIC TEXT -->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toEndOf="@id/leftPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.example.paintingapp.paint.PaintView
            android:id="@+id/paintView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
